{
  "manifest_version": 3,
  "name": "LinkedIn Bulk Scraper",
  "version": "1.0",
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "scripting",
    "activeTab",
    "tabs",
    "storage"
  ],
  "host_permissions": [
    "https://www.linkedin.com/*",
    "http://localhost:3000/*"
  ],
  "background": {
    "service_worker": "service-worker.js"
  },
   "content_security_policy": {
  "extension_pages": "default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline'; connect-src 'self' http://localhost:3000; img-src 'self' data:; object-src 'self';"
},
"content_scripts": [
  {
    "matches": ["https://www.linkedin.com/in/*"],
    "js": ["content.js"]
  }
]

}
